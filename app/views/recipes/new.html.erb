<div class="form-section">
  <h1>Create a New Recipe</h1>

  <%= form_with model: @recipe, url: user_recipes_path(user_id: current_user.id), method: :post do |form| %>
    <div class="form-field">
      <%= form.label :name %>
      <%= form.text_field :name, required: true %>
    </div>

    <div class="form-field">
      <%= form.label :description %>
      <%= form.text_area :description, required: true %>
    </div>

    <div class="form-field">
      <%= form.label :preparation_time %>
      <%= form.text_field :preparation_time, required: true %>
    </div>

    <div class="form-field">
      <%= form.label :cooking_time %>
      <%= form.text_field :cooking_time, required: true %>
    </div>

    <div class="form-field">
      <%= form.label :public %>
      <%= form.check_box :public %>
    </div>

    <div style="text-align: center;">
      <%= form.submit "Create Recipe" , class: "btn" %>
    </div>
  <% end %>
</div>
