<div id="<%= dom_id food %>">
  <p>
    <strong>Name:</strong>
    <%= food.name %>
  </p>

  <p>
    <strong>Measurement unit:</strong>
    <%= food.measurement_unit %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= food.price %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= food.quantity %>
  </p>

  <p>
    <% if food.user == current_user %>
      <%= button_to "Destroy", user_food_path(food.user, food), method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </p>

</div>
